{
    "extends": "airbnb-base",
    "parserOptions": {
        "ecmaVersion": 2017 
    },
    "rules": {
        "no-console": "off",
        "prefer-destructuring": "off",
        "linebreak-style": ["error", "windows"],
        "no-unused-vars": "warn",
        "padded-blocks": "off",
        "no-trailing-spaces": "warn",
        "prefer-const": "warn",
        "no-plusplus": "off",
        "no-empty": "off",
        "no-use-before-define": "off"
    }
}